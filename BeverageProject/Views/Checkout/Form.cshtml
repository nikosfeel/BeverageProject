<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" href="~/Content/images/wine-glass.png" type="image/png" />
    <link href="~/Content/css/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #D0D0D0;
        }

        .invalid-feedback {
            color: red;
        }
    </style>
</head>
<body>
    <section>
        <div class="container">
            <div class="py-5 text-center">
                <h2><i class="fa fa-glass"></i>E-Beverage</h2>
            </div>
            <div class="row">
                <div class="col-md-4 order-md-2 mb-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Your cart<i class="fa fa-shopping-cart"></i></span>
                    </h4>
                    <ul class="list-group mb-3 sticky-top">
                        @foreach (Item item in (List<Item>)Session["cart"])
                        {
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">Name : @item.Product.Name</h6>
                                <small class="text-muted">Kind : @item.Product.GetType().Name</small>
                            </div>
                            <strong class="text-muted">Quantity : @item.Quantity</strong>
                            <br />
                            <span class="text-muted">Price : @item.Product.Price€</span>

                            <a href="@Url.Action("Remove", "Cart", new { id = item.Product.Id })" class="remove"><i class="fa fa-trash-o fa-2x"></i></a>
                        </li>
                        }
                        @{
                            List<Item> cart = (List<Item>)Session["cart"];
                            var total = cart.Sum(item => item.Product.Price * item.Quantity);
                        }
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total :</span>
                            <strong>@total€</strong>
                        </li>
                    </ul>
                </div>
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">Billing address</h4>
                    <form class="needs-validation" novalidate="">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName">First name</label>
                                <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                                <div class="invalid-feedback"> Valid first name is required. </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName">Last name</label>
                                <input type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                                <div class="invalid-feedback"> Valid last name is required. </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="username">Username</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"></span>
                                </div>
                                <input type="text" class="form-control" id="username" placeholder="Username" required="">
                                <div class="invalid-feedback" style="width: 100%;"> Your username is required. </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="example@gmail.com">
                            <div class="invalid-feedback"> Please enter a valid email address for shipping updates. </div>
                        </div>
                        <div class="mb-3">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" placeholder="Put your Address" required="">
                            <div class="invalid-feedback"> Please enter your shipping address. </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="zip">Zip</label>
                                <input type="text" class="form-control" id="zip" placeholder="" required="">
                                <div class="invalid-feedback"> Zip code required. </div>
                            </div>
                        </div>
                        <hr class="mb-4">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="same-address">
                            <label class="custom-control-label" for="same-address">Shipping address is the same as my billing address</label>
                        </div>
                        <hr class="mb-4">
                        <h4 class="mb-3" style="text-align:center">Payment</h4>
                        <a href="@Url.Action("PayPal", "Checkout")" class="btn btn-info btn-block">PayPal / Credit Card</a>
                        <hr class="mb-4">
                        <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>
                    </form>
                </div>
            </div>
            <br />
            <br />
            <br />
        </div>
    </section>
    <!--=================== Footer Top Section ===================-->
    <section class="footer-top">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <!--=================== Social Icons Footer ===================-->
                    <div class="pull-left">
                        <ul class="list-inline paira-margin-bottom-1">
                            <li><a href="#" class="display-inline-b"><i class="fa fa-facebook fa-2x"></i></a></li>
                            <li><a href="#" class="padding-left-20  display-inline-b"><i class="fa fa-instagram fa-2x"></i></a></li>
                            <li><a href="#" class="padding-left-20 display-inline-b"><i class="fa fa-linkedin-square fa-2x"></i></a></li>
                        </ul>
                    </div>
                    <div class="pull-right">
                        <ul class="list-inline paira-margin-bottom-1">
                            <li><a href="#" class="display-inline-b"><img src="~/Content/images/footer/payment-1.png" alt=""></a></li>
                            <li><a href="#" class="padding-left-20  display-inline-b"><img src="~/Content/images/footer/payment-2.png" alt=""></a></li>
                            <li><a href="#" class="padding-left-20 display-inline-b"><img src="~/Content/images/footer/payment-3.png" alt=""></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--=================== Footer Top Section ===================-->
    <section class="footer-bottom paira-padding-bottom-1">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <!--=================== Social Icons Footer ===================-->
                    <div class="pull-left">
                        <ul class="list-inline footer-list-style footer-nav">
                            <li><a href="collection.html" class="display-inline-b raleway-light">Shop</a></li>
                            <li class="text-center"><i class="fa fa-minus raleway-light"></i></li>
                            <li><a href="product.html" class="display-inline-b raleway-light">Return</a></li>
                            <li class="text-center"><i class="fa fa-minus raleway-light"></i></li>
                            <li><a href="@Url.Action("About", "Home")" class="display-inline-b raleway-light">About us</a></li>
                            <li class="text-center"><i class="fa fa-minus raleway-light"></i></li>
                            <li><a href="@Url.Action("Contact", "Home")" class="display-inline-b raleway-light">Contact</a></li>
                        </ul>
                        <br /><a a href="@Url.Action("View", "TermsAndConditions")"> Terms & Conditions</a>
                        <br /><a href=""> Privacy Policy</a>
                        <br /><a href=""> Cookie Policy</a>
                    </div>
                    <div class="pull-right">
                        <br /><span class="pull-right">908 Andrianou Str.</span>
                        <br /><span class="pull-right">Athens, Greece</span>
                        <br /><span class="pull-right">210 000 8808</span>
                        <br /><a href=""><span class="pull-right">info@e-beverage.gr</span></a>
                        <br />
                        <p>&copy; @DateTime.Now.Year | E-Beverage. <span style="font-weight:100">All rights reserved</span></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
