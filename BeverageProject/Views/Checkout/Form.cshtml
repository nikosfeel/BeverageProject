                            </div>
                        </div>

                    </div>
                    <label>
                        <input type="checkbox" checked="checked" name="sameadr"> Shipping address same as billing
                    </label>
                    <input type="submit" value="Continue to checkout" class="btn">
                </form>
            </div>
        </div>
        <div class="col-25">
            @{
                List<Item> cart = (List<Item>)Session["cart"];
                var total = cart.Sum(item => item.Product.Price * item.Quantity);
            }
            <div class="container">
                <h4>
                    Cart
                    <span class="price" style="color:black">
                        <i class="fa fa-shopping-cart"></i>
                        <b>@cart.Count()</b>
                    </span>
                </h4>
                @foreach (Item item in (List<Item>)Session["cart"])
                {
                    <p><span>@item.Product.Name</span> <span class="text-muted">Price : @item.Product.Price€</span></p>
                    <small class="text-muted">Kind : @item.Product.GetType().Name</small>
                    <strong class="text-muted">Quantity : @item.Quantity</strong>
                    <a href="@Url.Action("Remove", "Cart", new { id = item.Product.Id })" class="remove"><i class="fa fa-trash-o fa-2x"></i></a>
                    <hr>
                }

                <p>Total <span class="price" style="color:black"><b name="total">@total€</b></span></p>
            </div>
        </div>
    </div>





    










