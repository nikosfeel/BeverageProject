@model BeverageProject.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<!--=================== Main Content Container ===================-->
<main class="reset-password-page">
    <!--=================== Breadcrumb Section ===================-->
    <section class="breadcrumb-container paira-padding-bottom-1">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="breadcrumb">
                        <ul class="list-inline">
                            <li><a href="#" class="raleway-light">Home <i class="fa fa-angle-right"></i></a></li>
                            <li class="raleway-sbold">Reset Password</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--=================== Reset-Password Section ===================-->
    <section class="login-content paira-padding-bottom-1">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <img alt="" class="paira-margin-bottom-1" src="images/hedding.png">
                    <h3 class="text-uppercase raleway-light margin-clear paira-margin-bottom-1">Create New Password</h3>
                </div>
                <div class="col-md-12 col-xs-12 col-sm-12">
                    <div class="form-contact">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                                <!--=================== Contact Us Form Section ===================-->
                                <form accept-charset="UTF-8" action="#" class="contact-form" method="post">
                                    <div class="row">
                                        <input name="form_type" type="hidden" value="contact">
                                        <input name="utf8" type="hidden" value="✓">
                                        <div class="form-group col-md-12 col-sm-12 col-xs-12 paira-margin-top-1 margin-bottom-0">
                                            <input type="email" class="form-control" name="contact[email]">
                                            <span class="center-block"><label>Email</label></span>
                                        </div>
                                    </div>
                                    <div class="text-right paira-margin-top-1">
                                        <a href="@Url.Action("Login", "Account")" class="btn btn-default btn-lg color-scheme-2 text-uppercase raleway-light margin-left-25">Cancel</a>
                                        <a class="text-uppercase text-color-black margin-right-5 raleway-light letter-spacing-2 margin-left-25">Or</a>
                                        <a href="#" class="btn btn-default btn-lg color-scheme-2 text-uppercase raleway-light margin-left-25">Send</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>-







