@section scripts{
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script type="text/javascript">
        LoadData();
        function LoadData() {
            var settings = {
                "url": "/api/AllProducts",
                "method": "GET",
                "timeout": 0,
            };

            $.ajax(settings).done(function (response) {
                LoadBeers();
                LoadWines();
                LoadWhiskeys();
                LoadSpirits();

                function LoadBeers() {
                    let beers = response.beers;
                    for (let beer of beers) {
                        let template = `
                        <tr>
                            <td>${beer.Id}</td>
                            <td>${beer.Category.Title} > ${beer.Category.Kind}</td>
                            <td><img src="${beer.PhotoUrl}" alt=" " class="img-responsive" style="width:50px;" /></td>
                            <td>${beer.Name}</td>
                            <td>${beer.Price}€</td>
                            <td style="width:40%">${beer.Description}</td>
                            <td>
                                 <button class="btn btn-info">Edit</button>
                                 <button class="btn btn-danger">Delete</button>
                           </td>
                        </tr>
                      `
                        let element = $(template);

                        //element.find(".delete-btn").click(DeleteRow);
                        //element.find(".edit1-btn").click(Edit1Row);


                        $("tbody").append(element);
                    }
                }

                function LoadWines() {

