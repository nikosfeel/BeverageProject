@model IEnumerable<Entities.Products.Beer>
@{
    ViewBag.Title = "AllBeers";
    Layout = "~/Views/Shared/AdminComponents/_AdminLayout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        All Beers
                        <span class="tools pull-right">
                            <a href="javascript:;" class="fa fa-chevron-down"></a>
                        </span>
                    </header>
                    <div class="panel-body">
                        <section id="unseen">
                            <table class="table" id="example">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Category</th>
                                        <th>PhotoUrl</th>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>

@section scripts{
    <script src="https://cdn.datatables.net/1.11.4/js/dataTables.bootstrap4.min.js"></script>

    <script type="text/javascript">
        LoadData();

        setTimeout(function () {
            $('#example').DataTable(
                {
                    stateSave: true,
                    stateSaveCallback: function (settings, data) {
                        localStorage.setItem('DataTables_' + settings.sInstance, JSON.stringify(data))
                    },
                    stateLoadCallback: function (settings) {
                        return JSON.parse(localStorage.getItem('DataTables_' + settings.sInstance))
                    },
                    paging: true,
                }
            )
        }, 1000);


        function LoadData() {
            var settings = {
                "url": "/api/Beers",
                "method": "GET",
                "timeout": 0,
            };

            $.ajax(settings).done(function (response) {
                console.log(response);
                LoadBeers();

                function LoadBeers() {
                    let beers = response.beers;
                    for (let beer of beers) {
                        let template = `
                                          <tr id="${beer.Id}">
                                              <td>${beer.Id}</td>
                                              <td>Beer > ${beer.Category.Kind}</td>
                                              <td><img src="${beer.PhotoUrl}" alt=" " class="img-responsive" style="width:50px;" /></td>
                                              <td>${beer.Name}</td>
                                              <td>${beer.Price}€</td>
                                              <td style="width:40%">${beer.Description}</td>
                                              <td>
                                                   <button class="btn btn-info">Edit</button>
                                                   <button class="btn btn-danger delete-btn">Delete</button>
                                             </td>
                                          </tr>
                                        `
                        let element = $(template);

                        element.find(".delete-btn").click(DeleteRow);
                        //element.find(".edit1-btn").click(Edit1Row);


                        $("tbody").append(element);
                    }
                }
            });


        }
        function DeleteRow() {
            let rowId = $(this).parent().parent().attr('id');
            console.log(rowId);

            var settings = {
                "url": "/api/Beers?id=" + rowId,
                "method": "DELETE",
                "timeout": 0,
            };

            $.ajax(settings).done(function (response) {
                console.log(response);
                let product = response;
                let querry = "#" + product.Id;

                $(querry).hide(500, removeRow);
                function removeRow() {
                    $(querry).remove();
                }
            });
        }
    </script>
    <script type="text/javascript">

    </script>
}
